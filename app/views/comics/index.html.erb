<div class="content">
  <div class="comics-grid">
    <% @comics.each do |comic| %>
      <% favourite_class = user_favourite?(comic.id) ? 'favourited' : '' %>
      <div class="comic <%= favourite_class %>">
        <img class="comic-cover" src=<%= comic.thumbnail_urls[:medium] %> alt=<%= comic.title %>>
        <div class="comic-cover-overlay <%= favourite_class %>">
          <div class="favourite-button-section">
            <%= render partial: 'favourite_button', locals: { comic_id: comic.id }%>
          </div>
          <div class="comic-title">
            <p class="comic-title-text">
              <%= comic.title.upcase %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="navigation">
    <% unless first_page? %>
      <%= link_to 'previous page', root_path(page: current_page - 1), class: 'page-navigation-button previous' %>
    <% end %>

    <% unless last_page? %>
      <%= link_to 'next page', root_path(page: current_page + 1), class: 'page-navigation-button next' %>
    <% end%>
  </div>
</div>